<!-- WebUI/Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <nav class="bg-blue-600 shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between h-16">
                <div class="flex space-x-8">
                    <a href="/" class="flex items-center text-white font-bold text-xl">
                        Library Management
                    </a>
                    <div class="hidden md:flex space-x-4 items-center">
                        <a href="/" class="text-white hover:bg-blue-700 px-3 py-2 rounded">Home</a>
                        <a href="/Book" class="text-white hover:bg-blue-700 px-3 py-2 rounded">Books</a>
                        <a href="/Categories" class="text-white hover:bg-blue-700 px-3 py-2 rounded">Categories</a>
                        <a href="/Issues" class="text-white hover:bg-blue-700 px-3 py-2 rounded">Issues</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto py-6 px-4">
        @RenderBody()
    </main>

   
</body>
</html>
